{
	"compilerOptions": {
	  "module": "NodeNext",                    // Required for ESM-style modules in VS Code extensions
	  "moduleResolution": "NodeNext",          // Must match module type
	  "target": "ES2022",
	  "lib": ["ES2022"],
	  "sourceMap": true,
	  "rootDir": "src",
	  "outDir": "out",
	  "strict": true,
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "forceConsistentCasingInFileNames": true
  
	  /* Optional strictness settings */
	  // "noImplicitReturns": true,
	  // "noFallthroughCasesInSwitch": true,
	  // "noUnusedParameters": true
	},
	"exclude": ["node_modules", ".vscode-test"]
  }
